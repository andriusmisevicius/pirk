{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container col-lg-4 col-sm-10">
        <h1>Register</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.name,{'attr':{'placeholder':'First and last name','required autofocus':true}}) }}
        {{ form_row(registrationForm.phone,{'attr':{'placeholder':'Phone number'}}) }}
        {{ form_row(registrationForm.email, {'attr':{'placeholder':'Enter your Email','required autofocus':true}}) }}
        {{ form_row(registrationForm.plainPassword,{'attr':{'placeholder':'Password'}}) }}

        <button class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>

{% endblock %}
